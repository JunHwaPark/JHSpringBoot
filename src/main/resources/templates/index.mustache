{{>layout/header}}
<h1>스프링 부트로 시작하는 웹 서비스 Ver.2</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/location/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>
    <br>
    <!--목록 출력 영역-->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-string">
        <tr>
            <th>번호</th>
            <th>위도</th>
            <th>경도</th>
            <th>최종 수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#locationEntity}}
        <tr>
            <td><a href="/location/update/{{id}}">{{id}}</a></td>
            <td>{{latitude}}</td>
            <td>{{longitude}}</td>
            <td>{{modifiedDate}}</td>
        </tr>
        {{/locationEntity}}
        </tbody>
    </table>
</div>
{{>layout/footer}}