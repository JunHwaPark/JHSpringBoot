{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">번호</label>
                <input type="text" class="form-control" id="id" value="{{locationEntity.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="latitude">위도</label>
                <input type="text" class="form-control" id="latitude" value="{{locationEntity.latitude}}">
            </div>
            <div class="form-group">
                <label for="longitude">경도</label>
                <input type="text" class="form-control" id="longitude" value="{{locationEntity.longitude}}">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}